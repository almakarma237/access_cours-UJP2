<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Acc√®s_Cours - {% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div id="main">
    {{ include('base/includes/_side_bar.html.twig') }}
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{% block page_title %}Layout Default{% endblock %}</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('home') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{% block page %}Layout Default{% endblock %}</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section class="section">
            {% block body %}

            {% endblock %}
        </section>
        {{ include('base/includes/_footer.html.twig') }}
    </div>
</div>
</body>
</html>
