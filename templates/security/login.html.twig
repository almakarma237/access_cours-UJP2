<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Accès_Cours - Login</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="account-page">
    <div class="main-wrapper">
        <div class="account-content">
            <div class="container">

                <!-- Account Logo -->
                <div class="account-logo">
                    <img src="img/logo2.png">
                </div>
                <!-- /Account Logo -->

                <div class="account-box">
                    <div class="account-wrapper">
                        {% if app.user %}
                            <div class="mb-2 text-center">
                                Vous êtes connecter en tant que
                                {{ app.user.username }},
                                <a href="{{ path('app_logout') }}">Deconnexion</a>
                            </div>
                        {% endif %}

                        <h3 class="account-title">Login</h3>
                        <p class="account-subtitle">Acceder a la bibliotheque</p>

                        <!-- Account Form -->
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="form-group">
                                <label for="inputEmail">Adresse Email</label>

                                <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>

                            </div>
                            <div class="form-group">
                                <label for="inputPassword">Mot de passe</label>

                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-group text-center">
                                <button class="btn btn-primary account-btn" type="submit">Connexion</button>
                            </div>
                            <div class="account-footer">
                                <p>Vous n'avez pas de compte?
                                    <a href="{{path("etudiant_register")}}">S'inscrire</a>
                                </p>
                            </div>
                        </form>
                        <!-- /Account Form -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
