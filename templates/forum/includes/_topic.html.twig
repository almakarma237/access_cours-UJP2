<div class="bg-white rounded-bottom smooth-shadow-sm mb-3 position-relative">
    <div class="row d-flex align-items-center justify-content-between pt-4 pb-3 px-4">
        <div>
            <div class="d-flex align-items-center">
                <!-- avatar -->
                <div class="me-1">
                    <img src="{{ asset('/images/faces/1.jpg') }}"
                         class="avatar rounded-circle border border-4 border-white-color-40" alt="">
                </div>
                <!-- text -->
                <div>
                    <P class="mb-1">{{ topic.name }}</p>
                    <h6 class="mb-0 d-block">
                        {{ topic.author }},
                        {% if topic.updatedAt is not null %}
                            mis Ã  jour {{ topic.updatedAt | ago }}
                        {% else %}
                            {{ topic.createdAt | ago }}
                        {% endif %}
                    </h6>
                </div>
                <div class="ms-auto text-right">
                    <i class="fa fa-comments fa-lg">
                    </i>
                    {{ topic.messages | length }}
                </div>
                <a href="{{ path('app_show_topic', {id : topic.id }) }}" aria-hidden="true"
                   style="position:absolute; top:0; left:0;width: 100%;height: 100%;"></a>
            </div>
        </div>
        <div class="mt-2 d-flex justify-content-end">
            {% for tag in topic.tags %}
                <span class="ms-1 badge" style="background-color: {{ tag.color }}">{{ tag.name }}</span>
            {% endfor %}
        </div>
    </div>
</div>