<div class="forum-topic rounded-bottom smooth-shadow-sm mb-3 {% if topic.solved %}is-accepted{% endif %}">
    <div class="forum-avatar">
        <img src="{{ asset('/images/faces/1.jpg') }}"
             class="avatar rounded-circle border border-4 border-white-color-40" alt="">
    </div>
    <div class="forum-topic__body">
        <a class="forum-topic__title">
            {{ topic.name }}
            {% if topic.solved %}
                <span class="pill pill-green small">
                    Sujet résolu
                </span>
            {% endif %}
        </a>
        <div class="forum-message__meta">
            <div class="forum-topic__tags">
                {% for tag in topic.tags %}
                    <div class="topic-tag">
                        <a href="#" class="pill small pill-square pill-grey"
                           style="background-color: {{ tag.color }}">{{ tag.name }}</a>
                    </div>
                {% endfor %}
            </div>
            {{ topic.author }}
            {% if topic.updatedAt is not null %}
                , mis à jour {{ topic.updatedAt | ago }}
            {% else %}
                , {{ topic.createdAt | ago }}
            {% endif %}
        </div>
    </div>
    <div class="forum-topic__count">
        <i class="fa fa-comments">
        </i>
        {{ topic.messages | length }}
    </div>
    <a href="{{ path('app_show_topic', {id : topic.id }) }}" aria-hidden="true"
       style="position:absolute; top:0; left:0;width: 100%;height: 100%;"></a>
</div>