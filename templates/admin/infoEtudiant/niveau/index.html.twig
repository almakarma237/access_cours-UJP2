{% extends 'base/base.html.twig' %}

{% block title %}Niveau{% endblock %}
{% block style %}style="min-height: 647px;"{% endblock %}
{% block page_title %}Gestion Niveaux{% endblock %}
{% block page %}niveau{% endblock %}

{% block add %}
    <div class="col-auto float-right ml-auto">
        <a href="#" class="btn add-btn" data-toggle="modal" data-target="#add_niveau"><i class="fa fa-plus"></i>
            Ajouter un niveau</a>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table mb-0">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Alias</th>
                        <th class="text-right">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for niveau in niveaux %}
                        <tr>
                            <td>{{ niveau.nom }}</td>
                            <td>{{ niveau.alias }}</td>
                            <td class="text-right">
                                {{ include('admin/infoEtudiant/niveau/includes/_delete.html.twig') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{ include('admin/infoEtudiant/niveau/includes/_form.html.twig') }}
{% endblock %}