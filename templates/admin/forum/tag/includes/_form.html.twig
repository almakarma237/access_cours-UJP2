{{ form_start(form) }}
<div class="row">
	<div class="col-sm-6">
		<div class="form-group">
			<label class="col-form-label">Nom
				<span class="text-danger">*</span>
			</label>
			{{ form_row(form.name) }}
		</div>
	</div>
	<div class="col-sm-6">
		<div class="form-group">
			<label class="col-form-label">Couleur
				<span class="text-danger">*</span>
			</label>
			{{ form_row(form.color) }}
		</div>
	</div>
	<div class="col-sm-12">
		<div class="form-group">
			<label class="col-form-label">Description</label>
			{{ form_row(form.description) }}
		</div>
	</div>
</div>
<div class="submit-section">
	<button class="btn btn-primary submit-btn">Enregistrer</button>
</div>
{{ form_end(form) }}
