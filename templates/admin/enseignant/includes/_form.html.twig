<!-- Add Employee Modal -->
<div id="add_employee" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter Enseignant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-form-label">Nom <span
                                            class="text-danger">*</span></label>
                                {{ form_row(form.nom) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-form-label">Prenom <span
                                            class="text-danger">*</span></label>
                                {{ form_row(form.prenom) }}
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-form-label">Email <span
                                            class="text-danger">*</span></label>
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-form-label">Contact <span
                                            class="text-danger">*</span></label>
                                {{ form_row(form.numeroTelephone) }}
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-form-label">N° CNI <span
                                            class="text-danger">*</span></label>
                                {{ form_row(form.numero_cni) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-form-label">Mot de passe <span
                                            class="text-danger">*</span></label>
                                {{ form_row(form.password) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-form-label">Confirmer <span
                                            class="text-danger">*</span></label>
                                {{ form_row(form.confirmPassword) }}
                            </div>
                        </div>
                    </div>
                    <div class="submit-section">
                        <button class="btn btn-primary submit-btn">Enregistrer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
<!-- /Add Employee Modal -->
