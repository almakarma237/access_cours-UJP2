{% extends 'base/base.html.twig' %}

{% block title %}Unite d'enseignement{% endblock %}
{% block style %}style="min-height: 647px;"{% endblock %}
{% block page_title %}Unite d'enseignement{% endblock %}
{% block page %}UE{% endblock %}

{% block add %}
    <div class="col-auto float-right ml-auto">
        <a href="#" class="btn add-btn" data-toggle="modal" data-target="#add_ue"><i class="fa fa-plus"></i>
            Ajouter une UE</a>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="datatable" class="table table-striped custom-table mb-0">
                    <thead>
                    <tr>
                        <th>Nom UE</th>
                        <th>Fili√®res</th>
                        <th class="text-right">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ue in ues %}
                        <tr>
                            <td>{{ ue.nom }}</td>
                            <td>
                                {% if ue.filieres|length < 2 %}
                                    {% for filiere in ue.filieres %}
                                        <i class="fa fa-dot-circle-o text-success"></i>
                                        {{ filiere }}
                                    {% endfor %}
                                {% else %}
                                    <div class="dropdown action-label">
                                        <a class="btn btn-white btn-sm btn-rounded dropdown-toggle" href="#"
                                           data-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-dot-circle-o text-white"></i> Filieres
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-left" style="">
                                            {% for filiere in ue.filieres %}
                                                <li class="dropdown-item">
                                                    <i class="fa fa-dot-circle-o text-success"></i>
                                                    {{ filiere.nom }}
                                                </li>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                            </td>
                            <td class="text-right">
                                {{ include('admin/enseignement/ue/includes/_delete.html.twig') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{ include('admin/enseignement/ue/includes/_form.html.twig') }}
{% endblock %}