<div class="modal custom-modal fade" id="add_cour" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un cour</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div class="form-group">
                    <label>Nom <span class="text-danger">*</span></label>
                    {{ form_row(form.nom) }}
                </div>
                <div class="form-group">
                    <label>Niveau d'appartenance <span class="text-danger">*</span></label>
                    {{ form_row(form.niveau) }}
                </div>
                <div class="form-group">
                    <label>Les Filières <span class="text-danger">*</span></label>
                    {{ form_row(form.filieres) }}
                </div>
                <div class="form-group">
                    <label>Unité d'enseignement <span class="text-danger">*</span></label>
                    {{ form_row(form.UE) }}
                </div>
                <div class="form-group">
                    <label>Ajouter le cour <span class="text-danger">*</span></label>
                    {{ form_row(form.cour) }}
                </div>
                <div class="submit-section">
                    <button class="btn btn-primary submit-btn">Enregistrer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>