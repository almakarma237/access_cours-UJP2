{% extends 'base/base.html.twig' %}

{% block page %}Nouvel Enseignant{% endblock %}
{% block page_title %}Enregistrement d'un enseignant{% endblock %}

{% block body %}

    <section class="section mb-5">
        {{ form_start(registrationForm) }}

        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_row(registrationForm.nom) }}
            <div class="form-control-icon">
                <i class="bi bi-person"></i>
            </div>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_row(registrationForm.prenom) }}
            <div class="form-control-icon">
                <i class="bi bi-person"></i>
            </div>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_row(registrationForm.email) }}
            <div class="form-control-icon">
                <i class="bi bi-envelope"></i>
            </div>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_row(registrationForm.numeroTelephone) }}
            <div class="form-control-icon">
                <i class="bi bi-telephone"></i>
            </div>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_row(registrationForm.numero_cni) }}
            <div class="form-control-icon">
                <i class="bi bi-activity"></i>
            </div>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_row(registrationForm.password) }}
            <div class="form-control-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_row(registrationForm.confirmPassword) }}
            <div class="form-control-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-3">Enregistrer</button>
        {{ form_end(registrationForm) }}
    </section>
{% endblock %}