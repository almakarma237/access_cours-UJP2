<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Accès_Cours - Login</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="bg-light">
<div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center g-0 min-vh-100">
        <div class="col-12 col-md-8 col-lg-6 col-xxl-4 py-8 py-xl-0">
            <!-- Card -->
            <div class="card smooth-shadow-md">
                <!-- Card body -->
                <div class="card-body p-6">
                    <div class="mb-4">
                        <a href=""><img src="../assets/images/brand/logo/logo-primary.svg" class="mb-2" alt=""></a>
                        {% if app.user %}
                            <div class="mb-2 text-center">
                                Vous êtes connecter en tant que
                                {{ app.user.username }},
                                <a href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        {% else %}
                            <p class="mb-6">Veillez à renseigner tout les champs.</p>
                        {% endif %}
                    </div>

                    <!-- Account Form -->
                    {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        <label class="form-label">Nom </label>
                        {{ form_row(registrationForm.nom) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Prenom </label>
                        {{ form_row(registrationForm.prenom) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact </label>
                        {{ form_row(registrationForm.numero_telephone) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Filiere</label>
                        {{ form_row(registrationForm.filiere) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Niveau</label>
                        {{ form_row(registrationForm.niveau) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mot de passe</label>
                        {{ form_row(registrationForm.password) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirmer</label>
                        {{ form_row(registrationForm.confirmPassword) }}
                    </div>
                    <div>
                        <!-- Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Cree le compte
                            </button>
                        </div>

                        <div class="d-md-flex justify-content-between mt-4">
                            <div class="mb-2 mb-md-0">
                                <a href="{{ path('app_login') }}" class="fs-5">Vous avez déjà un compte? Connexion </a>
                            </div>
                        </div>
                    </div>
                    {{ form_end(registrationForm) }}

                    <!-- /Account Form -->
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>

