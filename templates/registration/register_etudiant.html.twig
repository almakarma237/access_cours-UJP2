<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        {% block title %}<title>Acc√®s_Cours-S'inscrire</title>{% endblock %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="auth">

                <div class="row h-100">
                    <div class="col-lg-7 col-12">
                        <div id="auth-left">
                            <div class="auth-logo">
                                <a href="{{ path('home') }}"><img src="{{ asset('images/logo/logo.png') }}" alt="Logo"></a>
                            </div>
                            <h1 class="auth-title">Sign Up</h1>
                            <p class="auth-subtitle mb-5">Input your data to register to our website.</p>

                            {{form_start(registrationForm) }}

                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.nom) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-person"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.prenom) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-person"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.email) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-envelope"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.numeroTelephone) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-telephone"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.filiere) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-activity"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.niveau) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-activity"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.password) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                {{ form_row(registrationForm.confirmPassword) }}
                                <div class="form-control-icon">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Sign Up</button>
                            {{ form_end(registrationForm) }}
                            <div class="text-center mt-5 text-lg fs-4">
                                <p class='text-gray-600'>Already have an account?
                                    <a href="#" class="font-bold">Log in</a>.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 d-none d-lg-block">
                        <div id="auth-right">

                        </div>
                    </div>
                </div>

            </div>
        {% endblock %}
    </body>
</html>