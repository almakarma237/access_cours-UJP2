<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Acc√®s_Cours-S'inscrire</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="account-page">
    <div class="main-wrapper">
        <div class="account-content">

            <div class="container">

                <!-- Account Logo -->
                <div class="account-logo">
                    <img src="img/logo2.png">
                </div>
                <!-- /Account Logo -->

                <div class="account-box">
                    <div class="account-wrapper">
                        <h3 class="account-title">Register</h3>
                        <p class="account-subtitle">Access to our dashboard</p>

                        <!-- Account Form -->
                        {{ form_start(registrationForm) }}

                        <div class="form-group">
                            <label>Nom </label>
                            {{ form_row(registrationForm.nom) }}
                        </div>
                        <div class="form-group">
                            <label>Prenom </label>
                            {{ form_row(registrationForm.prenom) }}
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            {{ form_row(registrationForm.email) }}
                        </div>
                        <div class="form-group">
                            <label>Contact </label>
                            {{ form_row(registrationForm.numero_telephone) }}
                        </div>
                        <div class="form-group">
                            <label>Filiere</label>
                            {{ form_row(registrationForm.filiere) }}
                        </div>
                        <div class="form-group">
                            <label>Niveau</label>
                            {{ form_row(registrationForm.niveau) }}
                        </div>
                        <div class="form-group">
                            <label>Mot de passe</label>
                            {{ form_row(registrationForm.password) }}
                        </div>

                        <div class="form-group">
                            <label>Confirmer</label>
                            {{ form_row(registrationForm.confirmPassword) }}
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary account-btn">Register</button>
                        </div>
                        <div class="account-footer">
                            <p>Vous avez deja un compte?
                                <a href="{{path("app_login")}}">Login</a>
                            </p>
                        </div>
                        {{ form_end(registrationForm) }}

                        <!-- /Account Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>

